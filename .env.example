# Django
DJANGO_DEBUG=1
# Required when DJANGO_DEBUG=0
# SECRET_KEY=change-me-to-a-long-random-string

# Comma-separated hosts for Django (no scheme)
# Example: DJANGO_ALLOWED_HOSTS=example.com,www.example.com,123.123.123.123
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated origins with scheme (for HTTPS behind proxy)
# Example: DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=

# Database (recommended for production)
# Example (Postgres): DATABASE_URL=postgres://user:pass@127.0.0.1:5432/cyclingclub
DATABASE_URL=

# Docker Compose Postgres (optional convenience)
# If you use docker-compose.yml, these vars are used by the Postgres container.
POSTGRES_DB=cycling_club
POSTGRES_USER=cycling
POSTGRES_PASSWORD=change-me

# If your Postgres requires TLS (managed DB), set to 1.
# For local Docker network Postgres, keep 0.
DJANGO_DB_SSL_REQUIRE=0

# Email (SMTP)
# For Gmail you typically need an "App password".
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_TIMEOUT=20
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Optional: where contact form emails are sent
# Defaults to EMAIL_HOST_USER
CONTACT_RECIPIENT_EMAIL=

# Optional: on Windows/corporate networks you can toggle OS trust store.
EMAIL_USE_OS_TRUSTSTORE=1

# Security toggles (only applied when DJANGO_DEBUG=0)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SECURE_HSTS_SECONDS=3600
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0
